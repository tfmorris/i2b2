<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<!--
  - Application context definition for i2b2 with spring jdbc template.
    $Id: OntologyApplicationContext.xml,v 1.4 2007/10/16 14:28:00 lcp5 Exp $
  -->
<beans>

  <bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
    <property name="driverClassName" value="oracle.jdbc.driver.OracleDriver"/>
    <property name="url" value="jdbc:oracle:thin:@localhost:1521:xe"/>
    <property name="username" value="metadata_uname"/>
    <property name="password" value="metadata_password"/>
    <property name="defaultAutoCommit" value="false"/>
    <property name="defaultReadOnly" value="true"/>
  </bean>
  
</beans>

